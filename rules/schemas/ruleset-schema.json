{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://vibe-codex.com/schemas/ruleset/v1.0.0",
  "title": "Vibe Codex Ruleset Definition",
  "description": "Schema for defining collections of rules in vibe-codex",
  "type": "object",
  "required": ["version", "id", "name", "rules"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Schema version",
      "enum": ["1.0"]
    },
    "id": {
      "type": "string",
      "description": "Unique identifier for the ruleset",
      "pattern": "^[a-z0-9-]+$"
    },
    "name": {
      "type": "string",
      "description": "Human-readable name for the ruleset"
    },
    "description": {
      "type": "string",
      "description": "Detailed description of the ruleset's purpose"
    },
    "extends": {
      "type": "array",
      "description": "Other rulesets this extends",
      "items": {
        "type": "string"
      }
    },
    "rules": {
      "type": "array",
      "description": "List of rule IDs included in this ruleset",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "hooks": {
      "type": "array",
      "description": "List of hook IDs included in this ruleset",
      "items": {
        "type": "string"
      }
    },
    "config": {
      "type": "object",
      "description": "Ruleset-level configuration",
      "properties": {
        "failFast": {
          "type": "boolean",
          "description": "Stop on first failure",
          "default": false
        },
        "parallel": {
          "type": "boolean",
          "description": "Run rules in parallel",
          "default": true
        },
        "timeout": {
          "type": "number",
          "description": "Timeout in milliseconds",
          "default": 30000
        }
      }
    },
    "overrides": {
      "type": "object",
      "description": "Rule-specific configuration overrides",
      "additionalProperties": {
        "type": "object"
      }
    }
  }
}